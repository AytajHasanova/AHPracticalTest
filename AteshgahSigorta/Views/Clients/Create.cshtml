@model DataAccessLayer.DTOs.ClientDto

@{
    ViewData["Title"] = "Create new client";
}
<h2>Create new client</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Clients" method="post" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TehephoneNr" class="control-label"></label>
                <input asp-for="TehephoneNr" class="form-control" />
                <span asp-validation-for="TehephoneNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}